generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductMeasurementEnum {
  UN
  KG
  L
  M
}

enum UserRoleEnum {
  ADMIN
  USER
  SUPER_ADMIN
}

enum StockTypeEnum {
  CENTRAL
  SECONDARY
}

enum StockStatusEnum {
  ACTIVE
  MAINTENANCE
  INACTIVE
}

enum MovementTypeEnum {
  ENTRY
  EXIT
  TRANSFER
}



model User {
  id            Int   @id @default(autoincrement())
  name          String  
  username      String   @unique
  email         String   @unique 
  role          UserRoleEnum @default(ADMIN)
  password      String
  createdAt     DateTime @default(now())

  // Relations
  refreshTokens RefreshToken[]
  movementBatches MovementBatch[]
}

model Product {
  id          Int   @id @default(autoincrement())
  name        String  
  description String  @default("")
  measurement ProductMeasurementEnum  @default(UN)
  codebar     String?   @unique
  categoryId  Int?   
  lastPrice   Decimal? @db.Decimal(10, 2)
  minStock Decimal @db.Decimal(10, 2) @default(0)
  isBelowMinStock Boolean @default(true)
  createdAt   DateTime @default(now())

  // Relations
  category    Category? @relation(fields: [categoryId], references: [id])
  stockedQuantities StockedProduct[]
  movements   MovementProduct[]
  nfeMappings NfeProductMapping[]
}

model Category {
  id   Int   @id @default(autoincrement())
  name String @unique
  colorPreset Int @default(1)

  // Relations
  products Product[]
}

model Stock {
  id          Int   @id @default(autoincrement())
  name        String
  type        StockTypeEnum  @default(CENTRAL)
  status      StockStatusEnum @default(ACTIVE)
  createdAt   DateTime @default(now())

  // Relations
  stockedProducts StockedProduct[]
  originBatches      MovementBatch[] @relation("OriginStock")
  destinationBatches MovementBatch[] @relation("DestinationStock")
  
}

model StockedProduct {
  id          Int   @id @default(autoincrement())
  productId   Int
  stockId     Int
  quantity    Decimal

  // Relations
  products     Product  @relation(fields: [productId], references: [id])
  stock        Stock    @relation(fields: [stockId], references: [id])
}

model MovementBatch {
  id            Int   @id @default(autoincrement())
  type          MovementTypeEnum
  observations  String?
  createdAt     DateTime @default(now())
  userCreatorId Int
  originStockId Int?
  destinationStockId Int?

  // Relations
  products    MovementProduct[]
  originStock     Stock? @relation("OriginStock", fields: [originStockId], references: [id])
  destinationStock Stock? @relation("DestinationStock", fields: [destinationStockId], references: [id])
  userCreator User @relation(fields: [userCreatorId], references: [id])
}

model MovementProduct {
  id            Int   @id @default(autoincrement())
  productId     Int
  movementBatchId Int
  quantity      Decimal  @db.Decimal(10, 2)
  pricePerUnit  Decimal?  @db.Decimal(10, 2)

  // Relations
  product      Product @relation(fields: [productId], references: [id])
  movementBatch MovementBatch @relation(fields: [movementBatchId], references: [id])
}

model NfeProductMapping {
  id          Int   @id @default(autoincrement())
  productId   Int
  nfeProductId String

  // Relations
  product     Product @relation(fields: [productId], references: [id])
}

model RefreshToken {
  id        Int   @id @default(autoincrement())
  token     String   @unique
  userId    Int  
  expiresAt DateTime @default(now())
  revoked  Boolean  @default(false)

  // Relations
  user      User     @relation(fields: [userId], references: [id])
}

